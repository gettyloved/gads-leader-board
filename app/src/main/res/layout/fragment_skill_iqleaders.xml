<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SkillIQLeadersFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_skill_iq"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/list_item_skill_iq"></androidx.recyclerview.widget.RecyclerView>


    <ProgressBar
        android:id="@+id/fragment_skilliq_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible" />
    <TextView
        android:id="@+id/fragment_skilliq_tv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connection to the API failed"
        android:visibility="invisible"
        android:textSize="20sp"
        android:layout_gravity="center"/>

</FrameLayout>